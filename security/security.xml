<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categories -->
        <record id="module_category_shopify" model="ir.module.category">
            <field name="name">Shopify Integration</field>
            <field name="description">Manage Shopify Integration settings and data</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_shopify_user" model="res.groups">
            <field name="name">Shopify User</field>
            <field name="category_id" ref="module_category_shopify"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User can view Shopify data and perform basic operations</field>
        </record>

        <record id="group_shopify_manager" model="res.groups">
            <field name="name">Shopify Manager</field>
            <field name="category_id" ref="module_category_shopify"/>
            <field name="implied_ids" eval="[(4, ref('group_shopify_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Manager can configure Shopify instances and manage all operations</field>
        </record>

        <!-- Record Rules -->

        <!-- Shopify Instance - Multi-company rule -->
        <record id="shopify_instance_comp_rule" model="ir.rule">
            <field name="name">Shopify Instance: multi-company</field>
            <field name="model_id" ref="model_shopify_instance"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Shopify Product - Access through instance -->
        <record id="shopify_product_instance_rule" model="ir.rule">
            <field name="name">Shopify Product: multi-company through instance</field>
            <field name="model_id" ref="model_shopify_product"/>
            <field name="domain_force">['|', ('instance_id.company_id', '=', False), ('instance_id.company_id', 'in', company_ids)]</field>
