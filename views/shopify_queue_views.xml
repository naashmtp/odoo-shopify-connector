<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Queue Tree View -->
    <record id="view_shopify_queue_tree" model="ir.ui.view">
        <field name="name">shopify.queue.tree</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <tree string="Shopify Queue Jobs" decoration-success="state == 'done'" decoration-danger="state == 'failed'" decoration-warning="state == 'running'" decoration-info="state == 'queued'">
                <field name="name"/>
                <field name="operation"/>
                <field name="state"/>
                <field name="priority" widget="priority"/>
                <field name="scheduled_date"/>
                <field name="progress" widget="progressbar"/>
                <field name="retry_count"/>
                <field name="instance_id"/>
            </tree>
        </field>
    </record>

    <!-- Shopify Queue Form View -->
    <record id="view_shopify_queue_form" model="ir.ui.view">
        <field name="name">shopify.queue.form</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <form string="Shopify Queue Job">
                <header>
                    <button name="action_run" type="object" string="Run Now" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'queued')]}"/>
                    <button name="action_retry" type="object" string="Retry" attrs="{'invisible': [('state', 'not in', ['failed', 'cancelled'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['running', 'done', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,queued,running,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Job Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="instance_id"/>
                            <field name="operation"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group name="scheduling">
                            <field name="scheduled_date"/>
                            <field name="started_date" attrs="{'invisible': [('started_date', '=', False)]}"/>
                            <field name="finished_date" attrs="{'invisible': [('finished_date', '=', False)]}"/>
                            <field name="execution_time" widget="float_time" attrs="{'invisible': [('execution_time', '=', 0)]}"/>
                        </group>
                    </group>
                    <group>
                        <group name="progress_info">
                            <label for="progress"/>
                            <div>
                                <field name="progress" widget="progressbar" class="oe_inline"/>
                                <span class="oe_inline"> %</span>
                            </div>
                            <field name="total_records"/>
                            <field name="processed_records"/>
                            <field name="success_records"/>
                            <field name="failed_records"/>
                        </group>
                        <group name="retry_info">
                            <field name="retry_count"/>
                            <field name="max_retries"/>
                            <field name="retry_delay"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Job Data" name="job_data">
                            <field name="data" widget="text" placeholder="Job data in JSON format"/>
                        </page>
                        <page string="Result" name="result" attrs="{'invisible': [('result', '=', False)]}">
                            <field name="result" widget="text"/>
                        </page>
                        <page string="Error" name="error" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" widget="text"/>
                        </page>
                        <page string="Child Jobs" name="child_jobs" attrs="{'invisible': [('child_job_ids', '=', [])]}">
                            <field name="child_job_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="operation"/>
                                    <field name="state"/>
                                    <field name="progress" widget="progressbar"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shopify Queue Kanban View -->
    <record id="view_shopify_queue_kanban" model="ir.ui.view">
        <field name="name">shopify.queue.kanban</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="operation"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="progress"/>
                <field name="scheduled_date"/>
                <field name="retry_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="o_priority_star fa fa-star-o" t-att-data-priority="priority" role="img" aria-label="Priority" title="Priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="operation"/>
                                <br/>
                                <field name="instance_id"/>
                                <div class="mt8">
                                    <progressbar t-att-value="record.progress.value" t-att-title="'Progress: ' + record.progress.value + '%'"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="scheduled_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.retry_count.raw_value > 0" class="badge badge-pill badge-warning">
                                        Retry: <t t-esc="record.retry_count.value"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Shopify Queue Search View -->
    <record id="view_shopify_queue_search" model="ir.ui.view">
        <field name="name">shopify.queue.search</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <search string="Shopify Queue Jobs">
                <field name="name"/>
                <field name="operation"/>
                <field name="instance_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Queued" name="filter_queued" domain="[('state', '=', 'queued')]"/>
                <filter string="Running" name="filter_running" domain="[('state', '=', 'running')]"/>
                <filter string="Done" name="filter_done" domain="[('state', '=', 'done')]"/>
                <filter string="Failed" name="filter_failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter string="High Priority" name="filter_high_priority" domain="[('priority', 'in', ['3', '4'])]"/>
                <filter string="Needs Retry" name="filter_retry" domain="[('state', '=', 'failed'), ('retry_count', '&lt;', 'max_retries')]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('scheduled_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="Overdue" name="filter_overdue" domain="[('scheduled_date', '&lt;', datetime.datetime.now()), ('state', '=', 'queued')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Instance" name="group_instance" context="{'group_by': 'instance_id'}"/>
                    <filter string="Operation" name="group_operation" context="{'group_by': 'operation'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Scheduled Date" name="group_scheduled" context="{'group_by': 'scheduled_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shopify Queue Graph View -->
    <record id="view_shopify_queue_graph" model="ir.ui.view">
        <field name="name">shopify.queue.graph</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <graph string="Queue Statistics" type="bar">
                <field name="operation"/>
                <field name="state" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Shopify Queue Pivot View -->
    <record id="view_shopify_queue_pivot" model="ir.ui.view">
        <field name="name">shopify.queue.pivot</field>
        <field name="model">shopify.queue</field>
        <field name="arch" type="xml">
            <pivot string="Queue Analysis">
                <field name="instance_id" type="row"/>
                <field name="operation" type="row"/>
                <field name="state" type="col"/>
                <field name="execution_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Shopify Queue Action -->
    <record id="action_shopify_queue" model="ir.actions.act_window">
        <field name="name">Shopify Queue</field>
        <field name="res_model">shopify.queue</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
        <field name="context">{'search_default_filter_queued': 1, 'search_default_filter_running': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No queue jobs found. Queue jobs will appear here when scheduled.
            </p>
        </field>
    </record>

</odoo>