<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Customer Tree View -->
    <record id="view_shopify_customer_tree" model="ir.ui.view">
        <field name="name">shopify.customer.tree</field>
        <field name="model">shopify.customer</field>
        <field name="arch" type="xml">
            <tree string="Shopify Customers">
                <field name="name"/>
                <field name="email"/>
                <field name="instance_id"/>
                <field name="partner_id"/>
                <field name="orders_count"/>
                <field name="total_spent"/>
                <field name="state"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <!-- Shopify Customer Form View -->
    <record id="view_shopify_customer_form" model="ir.ui.view">
        <field name="name">shopify.customer.form</field>
        <field name="model">shopify.customer</field>
        <field name="arch" type="xml">
            <form string="Shopify Customer">
                <header>
                    <button name="action_create_partner" type="object" string="Create Partner" class="oe_highlight" attrs="{'invisible': [('partner_id', '!=', False)]}"/>
                    <button name="action_sync_from_shopify" type="object" string="Sync from Shopify" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Customer Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="shopify_id"/>
                            <field name="instance_id"/>
                            <field name="partner_id"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group name="status_info">
                            <field name="imported"/>
                            <field name="verified_email"/>
                            <field name="accepts_marketing"/>
                            <field name="tax_exempt"/>
                        </group>
                    </group>
                    <group>
                        <group name="stats">
                            <label for="orders_count"/>
                            <div>
                                <field name="orders_count" class="oe_inline"/>
                                <span class="oe_inline"> orders</span>
                            </div>
                            <label for="total_spent"/>
                            <div>
                                <field name="total_spent" class="oe_inline"/>
                                <field name="currency" class="oe_inline"/>
                            </div>
                            <field name="last_order_date"/>
                        </group>
                        <group name="dates">
                            <field name="shopify_created_at"/>
                            <field name="shopify_updated_at"/>
                            <field name="last_sync"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Addresses" name="addresses">
                            <field name="address_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="address1"/>
                                    <field name="city"/>
                                    <field name="province"/>
                                    <field name="country"/>
                                    <field name="zip"/>
                                    <field name="is_default"/>
                                </tree>
                            </field>
                            <group>
                                <field name="default_address" string="Default Address (Text)"/>
                            </group>
                        </page>
                        <page string="Additional Info" name="additional_info">
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="tags"/>
                            </group>
                            <group>
                                <field name="note" placeholder="Customer notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shopify Customer Search View -->
    <record id="view_shopify_customer_search" model="ir.ui.view">
        <field name="name">shopify.customer.search</field>
        <field name="model">shopify.customer</field>
        <field name="arch" type="xml">
            <search string="Shopify Customers">
                <field name="name"/>
                <field name="email"/>
                <field name="shopify_id"/>
                <field name="instance_id"/>
                <field name="partner_id"/>
                <filter string="Imported" name="filter_imported" domain="[('imported', '=', True)]"/>
                <filter string="Not Imported" name="filter_not_imported" domain="[('imported', '=', False)]"/>
                <filter string="Accepts Marketing" name="filter_marketing" domain="[('accepts_marketing', '=', True)]"/>
                <separator/>
                <filter string="Enabled" name="filter_enabled" domain="[('state', '=', 'enabled')]"/>
                <filter string="Disabled" name="filter_disabled" domain="[('state', '=', 'disabled')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Instance" name="group_instance" context="{'group_by': 'instance_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shopify Customer Action -->
    <record id="action_shopify_customer" model="ir.actions.act_window">
        <field name="name">Shopify Customers</field>
        <field name="res_model">shopify.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Shopify customers found. Click to import customers from Shopify.
            </p>
        </field>
    </record>

    <!-- Shopify Customer Address Tree View -->
    <record id="view_shopify_customer_address_tree" model="ir.ui.view">
        <field name="name">shopify.customer.address.tree</field>
        <field name="model">shopify.customer.address</field>
        <field name="arch" type="xml">
            <tree string="Shopify Customer Addresses">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="address1"/>
                <field name="city"/>
                <field name="province"/>
                <field name="country"/>
                <field name="is_default"/>
            </tree>
        </field>
    </record>

    <!-- Shopify Customer Address Form View -->
    <record id="view_shopify_customer_address_form" model="ir.ui.view">
        <field name="name">shopify.customer.address.form</field>
        <field name="model">shopify.customer.address</field>
        <field name="arch" type="xml">
            <form string="Shopify Customer Address">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="shopify_id"/>
                            <field name="customer_id"/>
                            <field name="is_default"/>
                        </group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="company"/>
                            <field name="phone" widget="phone"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="address1"/>
                            <field name="address2"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="province"/>
                            <field name="country"/>
                            <field name="zip"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>