<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_shopify_instance_tree" model="ir.ui.view">
        <field name="name">shopify.instance.tree</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <tree string="Shopify Instances">
                <field name="name"/>
                <field name="shop_url"/>
                <field name="state" widget="badge" decoration-success="state=='connected'" decoration-danger="state=='error'" decoration-info="state=='draft'"/>
                <field name="last_sync"/>
                <field name="is_active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_shopify_instance_form" model="ir.ui.view">
        <field name="name">shopify.instance.form</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <form string="Shopify Instance">
                <header>
                    <button name="test_shopify_connection" string="Test Connection" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_sync_all" string="Sync All" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'connected')]}"/>
                    <button name="setup_webhooks" string="Setup Webhooks" type="object" attrs="{'invisible': [('state', '!=', 'connected')]}"/>
                    <button name="setup_onboarding_panel" string="Setup Wizard" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,connected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_shopify_product)d" type="action" class="oe_stat_button" icon="fa-cube" context="{'default_instance_id': active_id}">
                            <field name="product_count" widget="statinfo" string="Products"/>
                        </button>
                        <button name="%(action_shopify_order)d" type="action" class="oe_stat_button" icon="fa-shopping-cart" context="{'default_instance_id': active_id}">
                            <field name="order_count" widget="statinfo" string="Orders"/>
                        </button>
                        <button name="%(action_shopify_customer)d" type="action" class="oe_stat_button" icon="fa-users" context="{'default_instance_id': active_id}">
                            <field name="customer_count" widget="statinfo" string="Customers"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., My Shopify Store"/>
                        </h1>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="shop_url" placeholder="myshop.myshopify.com"/>
                            <field name="is_active"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Credentials" name="credentials">
                            <group>
                                <group string="API Configuration">
                                    <field name="api_key" password="True"/>
                                    <field name="api_secret" password="True"/>
                                    <field name="access_token" password="True"/>
                                </group>
                                <group string="Webhook Configuration">
                                    <field name="webhook_secret" password="True"/>
                                </group>
                            </group>
                        </page>

                        <page string="Automation" name="automation">
                            <group>
                                <group string="Import Settings">
                                    <field name="auto_import_orders"/>
                                    <field name="auto_import_products"/>
                                    <field name="auto_import_customers"/>
                                </group>
                                <group string="Sync Settings">
                                    <field name="auto_sync_stock"/>
                                    <field name="auto_create_invoices"/>
                                </group>
                            </group>
                        </page>

                        <page string="Mapping" name="mapping">
                            <group>
                                <group string="Default Configuration">
                                    <field name="warehouse_id" options="{'no_create': True}"/>
                                    <field name="pricelist_id" options="{'no_create': True}"/>
                                </group>
                                <group string="Sales Configuration">
                                    <field name="payment_term_id" options="{'no_create': True}"/>
                                    <field name="team_id" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Statistics" name="statistics">
                            <group>
                                <group string="Sync Information">
                                    <field name="last_sync" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                </group>
                                <group string="Data Counts">
                                    <field name="product_count" readonly="1"/>
                                    <field name="order_count" readonly="1"/>
                                    <field name="customer_count" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_shopify_instance_kanban" model="ir.ui.view">
        <field name="name">shopify.instance.kanban</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="shop_url"/>
                <field name="state"/>
                <field name="last_sync"/>
                <field name="is_active"/>
                <field name="product_count"/>
                <field name="order_count"/>
                <field name="customer_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.state.raw_value == 'connected' ? 'oe_kanban_color_5' : record.state.raw_value == 'error' ? 'oe_kanban_color_2' : 'oe_kanban_color_0'}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="shop_url"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content mt16">
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary" name="test_shopify_connection" type="object">
                                            Test Connection
                                        </button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <field name="state" widget="label_selection" options="{'classes': {'connected': 'success', 'error': 'danger', 'draft': 'info'}}"/>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-4 text-center">
                                        <a name="%(action_shopify_product)d" type="action" context="{'default_instance_id': active_id}">
                                            <field name="product_count"/>
                                            <br/>
                                            <small>Products</small>
                                        </a>
                                    </div>
                                    <div class="col-4 text-center">
                                        <a name="%(action_shopify_order)d" type="action" context="{'default_instance_id': active_id}">
                                            <field name="order_count"/>
                                            <br/>
                                            <small>Orders</small>
                                        </a>
                                    </div>
                                    <div class="col-4 text-center">
                                        <a name="%(action_shopify_customer)d" type="action" context="{'default_instance_id': active_id}">
                                            <field name="customer_count"/>
                                            <br/>
                                            <small>Customers</small>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="last_sync" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="is_active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shopify_instance_search" model="ir.ui.view">
        <field name="name">shopify.instance.search</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <search string="Shopify Instances">
                <field name="name" string="Instance" filter_domain="['|', ('name', 'ilike', self), ('shop_url', 'ilike', self)]"/>
                <field name="shop_url"/>
                <field name="state"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('state', '=', 'connected')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Active" name="group_by_active" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_shopify_instance" model="ir.actions.act_window">
        <field name="name">Shopify Instances</field>
        <field name="res_model">shopify.instance</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Shopify Instance
            </p>
            <p>
                Configure your Shopify store connection to start syncing products, orders and customers.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_shopify_root"
              name="Shopify"
              web_icon="shopify_integration,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_shopify_configuration"
              name="Configuration"
              parent="menu_shopify_root"
              sequence="100"/>

    <menuitem id="menu_shopify_instance"
              name="Shopify Instances"
              parent="menu_shopify_configuration"
              action="action_shopify_instance"
              sequence="10"/>

</odoo>