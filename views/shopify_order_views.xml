<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Order Form View -->
    <record id="view_shopify_order_form" model="ir.ui.view">
        <field name="name">shopify.order.form</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <form string="Shopify Order">
                <header>
                    <button name="create_sale_order" string="Create Sale Order"
                            type="object" class="oe_highlight"
                            attrs="{'invisible': [('sale_order_id', '!=', False)]}"/>
                    <button name="update_order_status" string="Update Status"
                            type="object"
                            attrs="{'invisible': [('shopify_id', '=', False)]}"/>
                    <button name="mark_order_fulfilled" string="Mark Fulfilled"
                            type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('shopify_id', '=', False), ('fulfillment_status', '=', 'fulfilled')]}"/>
                    <button name="cancel_shopify_order" string="Cancel Order"
                            type="object"
                            confirm="Are you sure you want to cancel this order on Shopify?"
                            attrs="{'invisible': [('cancelled_at', '!=', False)]}"/>
                    <field name="financial_status" widget="statusbar"
                           statusbar_visible="pending,authorized,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_shopify_order_line)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field name="line_count" widget="statinfo" string="Lines"/>
                        </button>
                        <button name="action_view_sale_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('sale_order_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Sale Order</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Order Information">
                            <field name="shopify_id" readonly="1"/>
                            <field name="shopify_order_number" readonly="1"/>
                            <field name="instance_id" options="{'no_create': True}"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="imported" invisible="1"/>
                        </group>
                        <group string="Customer Information">
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Order notes..."/>
                        <field name="tags"/>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="variant_title"/>
                                    <field name="sku"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total_discount"/>
                                    <field name="total_price" sum="Total"/>
                                    <field name="fulfillment_status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Financial" name="financial">
                            <group>
                                <group string="Amounts">
                                    <field name="currency" readonly="1"/>
                                    <field name="subtotal_price" readonly="1"/>
                                    <field name="total_tax" readonly="1"/>
                                    <field name="total_discounts" readonly="1"/>
                                    <field name="shipping_price" readonly="1"/>
                                    <field name="total_price" readonly="1"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                                <group string="Payment Status">
                                    <field name="financial_status" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Status" name="status">
                            <group>
                                <group string="Fulfillment">
                                    <field name="fulfillment_status" readonly="1"/>
                                </group>
                                <group string="Dates">
                                    <field name="shopify_created_at" readonly="1"/>
                                    <field name="shopify_updated_at" readonly="1"/>
                                    <field name="processed_at" readonly="1"/>
                                    <field name="cancelled_at" readonly="1"/>
                                    <field name="closed_at" readonly="1"/>
                                    <field name="last_sync" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Addresses" name="addresses">
                            <group>
                                <group string="Billing Address">
                                    <field name="billing_address" nolabel="1"
                                           placeholder="Billing address..." readonly="1"/>
                                </group>
                                <group string="Shipping Address">
                                    <field name="shipping_address" nolabel="1"
                                           placeholder="Shipping address..." readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Shopify Order Tree View -->
    <record id="view_shopify_order_tree" model="ir.ui.view">
        <field name="name">shopify.order.tree</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <tree string="Shopify Orders"
                  decoration-success="financial_status == 'paid'"
                  decoration-warning="financial_status in ('pending', 'authorized')"
                  decoration-danger="financial_status == 'voided'"
                  decoration-info="fulfillment_status == 'fulfilled'">
                <field name="name"/>
                <field name="shopify_order_number"/>
                <field name="instance_id"/>
                <field name="customer_id"/>
                <field name="email"/>
                <field name="currency" optional="hide"/>
                <field name="total_price" sum="Total"/>
                <field name="financial_status"/>
                <field name="fulfillment_status"/>
                <field name="shopify_created_at"/>
                <field name="imported" invisible="1"/>
                <field name="sale_order_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Shopify Order Kanban View -->
    <record id="view_shopify_order_kanban" model="ir.ui.view">
        <field name="name">shopify.order.kanban</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="financial_status">
                <field name="name"/>
                <field name="shopify_order_number"/>
                <field name="customer_id"/>
                <field name="email"/>
                <field name="total_price"/>
                <field name="currency"/>
                <field name="financial_status"/>
                <field name="fulfillment_status"/>
                <field name="shopify_created_at"/>
                <field name="imported"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="email"/>
                                    </div>
                                </div>
                                <span class="badge badge-pill">
                                    <field name="fulfillment_status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="customer_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="shopify_created_at" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <strong>
                                        <field name="total_price" widget="monetary"/>
                                        <field name="currency" invisible="1"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Shopify Order Search View -->
    <record id="view_shopify_order_search" model="ir.ui.view">
        <field name="name">shopify.order.search</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <search string="Shopify Orders">
                <field name="name"/>
                <field name="shopify_order_number"/>
                <field name="email"/>
                <field name="customer_id"/>
                <field name="instance_id"/>
                <separator/>
                <filter string="Not Imported" name="not_imported"
                        domain="[('imported', '=', False)]"/>
                <filter string="Imported" name="imported"
                        domain="[('imported', '=', True)]"/>
                <separator/>
                <filter string="Unpaid" name="unpaid"
                        domain="[('financial_status', 'in', ['pending', 'authorized'])]"/>
                <filter string="Paid" name="paid"
                        domain="[('financial_status', '=', 'paid')]"/>
                <filter string="Refunded" name="refunded"
                        domain="[('financial_status', 'in', ['partially_refunded', 'refunded'])]"/>
                <separator/>
                <filter string="Unfulfilled" name="unfulfilled"
                        domain="[('fulfillment_status', '=', 'unfulfilled')]"/>
                <filter string="Fulfilled" name="fulfilled"
                        domain="[('fulfillment_status', '=', 'fulfilled')]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('shopify_created_at', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week"
                        domain="[('shopify_created_at', '&gt;=', (context_today()-datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month"
                        domain="[('shopify_created_at', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Instance" name="group_instance"
                            context="{'group_by': 'instance_id'}"/>
                    <filter string="Financial Status" name="group_financial_status"
                            context="{'group_by': 'financial_status'}"/>
                    <filter string="Fulfillment Status" name="group_fulfillment_status"
                            context="{'group_by': 'fulfillment_status'}"/>
                    <filter string="Customer" name="group_customer"
                            context="{'group_by': 'customer_id'}"/>
                    <filter string="Created Date" name="group_created_date"
                            context="{'group_by': 'shopify_created_at'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shopify Order Action -->
    <record id="action_shopify_order" model="ir.actions.act_window">
        <field name="name">Shopify Orders</field>
        <field name="res_model">shopify.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_not_imported': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Shopify Order
            </p>
            <p>
                Import orders from your Shopify store or create them manually.
            </p>
        </field>
    </record>

    <!-- Shopify Order Line Tree View -->
    <record id="view_shopify_order_line_tree" model="ir.ui.view">
        <field name="name">shopify.order.line.tree</field>
        <field name="model">shopify.order.line</field>
        <field name="arch" type="xml">
            <tree string="Shopify Order Lines" create="false" delete="false">
                <field name="order_id"/>
                <field name="name"/>
                <field name="variant_title"/>
                <field name="sku"/>
                <field name="vendor" optional="hide"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="total_discount" optional="hide"/>
                <field name="total_price" sum="Total"/>
                <field name="fulfillment_status"/>
                <field name="requires_shipping" optional="hide"/>
                <field name="taxable" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Shopify Order Line Form View -->
    <record id="view_shopify_order_line_form" model="ir.ui.view">
        <field name="name">shopify.order.line.form</field>
        <field name="model">shopify.order.line</field>
        <field name="arch" type="xml">
            <form string="Shopify Order Line" create="false" delete="false">
                <sheet>
                    <group>
                        <group string="Product Information">
                            <field name="order_id"/>
                            <field name="shopify_id" readonly="1"/>
                            <field name="name"/>
                            <field name="variant_title"/>
                            <field name="sku"/>
                            <field name="vendor"/>
                            <field name="variant_id" readonly="1"/>
                        </group>
                        <group string="Quantities and Prices">
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="total_discount"/>
                            <field name="total_price" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status and Properties">
                            <field name="fulfillment_status"/>
                            <field name="requires_shipping"/>
                            <field name="taxable"/>
                        </group>
                        <group string="Odoo Link">
                            <field name="sale_line_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shopify Order Line Search View -->
    <record id="view_shopify_order_line_search" model="ir.ui.view">
        <field name="name">shopify.order.line.search</field>
        <field name="model">shopify.order.line</field>
        <field name="arch" type="xml">
            <search string="Shopify Order Lines">
                <field name="name"/>
                <field name="sku"/>
                <field name="order_id"/>
                <field name="variant_id"/>
                <separator/>
                <filter string="Fulfilled" name="fulfilled"
                        domain="[('fulfillment_status', '=', 'fulfilled')]"/>
                <filter string="Unfulfilled" name="unfulfilled"
                        domain="[('fulfillment_status', '!=', 'fulfilled')]"/>
                <separator/>
                <filter string="Requires Shipping" name="requires_shipping"
                        domain="[('requires_shipping', '=', True)]"/>
                <filter string="Taxable" name="taxable"
                        domain="[('taxable', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Order" name="group_order"
                            context="{'group_by': 'order_id'}"/>
                    <filter string="Product Variant" name="group_variant"
                            context="{'group_by': 'variant_id'}"/>
                    <filter string="Fulfillment Status" name="group_fulfillment"
                            context="{'group_by': 'fulfillment_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shopify Order Line Action -->
    <record id="action_shopify_order_line" model="ir.actions.act_window">
        <field name="name">Shopify Order Lines</field>
        <field name="res_model">shopify.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_unfulfilled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No order lines found
            </p>
            <p>
                Order lines are automatically created when importing orders from Shopify.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_shopify_order"
              name="Orders"
              parent="menu_shopify_root"
              action="action_shopify_order"
              sequence="20"/>

    <menuitem id="menu_shopify_order_line"
              name="Order Lines"
              parent="menu_shopify_root"
              action="action_shopify_order_line"
              sequence="21"/>

</odoo>