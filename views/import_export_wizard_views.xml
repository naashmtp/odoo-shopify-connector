<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Shopify Import/Export Wizard Form View -->
        <record id="view_shopify_import_export_wizard_form" model="ir.ui.view">
            <field name="name">shopify.import.export.wizard.form</field>
            <field name="model">shopify.import.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Shopify Import/Export">
                    <sheet>
                        <div class="oe_title">
                            <h1>Import/Export Operations</h1>
                        </div>

                        <group>
                            <group>
                                <field name="instance_id" options="{'no_create': True}"/>
                                <field name="operation" required="1"/>
                            </group>
                            <group>
                                <field name="create_queue_job"/>
                            </group>
                        </group>

                        <notebook>
                            <!-- Products Tab -->
                            <page string="Products" attrs="{'invisible': [('operation', 'not in', ['import_products', 'export_products', 'sync_stock', 'sync_prices'])]}">
                                <group attrs="{'invisible': [('operation', '!=', 'export_products')]}">
                                    <group>
                                        <field name="export_all_products"/>
                                    </group>
                                </group>
                                <group attrs="{'invisible': [('operation', '!=', 'export_products')]}">
                                    <field name="product_ids" widget="many2many_tags"
                                           attrs="{'invisible': [('export_all_products', '=', True)],
                                                   'required': [('export_all_products', '=', False), ('operation', '=', 'export_products')]}"
                                           domain="[('type', 'in', ['product', 'consu'])]"/>
                                </group>
                                <group attrs="{'invisible': [('operation', 'not in', ['import_products', 'sync_stock', 'sync_prices'])]}" colspan="2">
                                    <div class="alert alert-info" role="alert">
                                        <p attrs="{'invisible': [('operation', '!=', 'import_products')]}">
                                            <strong>Import Products:</strong> Downloads all products from Shopify and creates/updates them in Odoo.
                                        </p>
                                        <p attrs="{'invisible': [('operation', '!=', 'sync_stock')]}">
                                            <strong>Sync Stock:</strong> Updates inventory levels on Shopify based on Odoo stock.
                                        </p>
                                        <p attrs="{'invisible': [('operation', '!=', 'sync_prices')]}">
                                            <strong>Sync Prices:</strong> Updates product prices on Shopify based on Odoo pricelists.
                                        </p>
                                    </div>
                                </group>
                            </page>

                            <!-- Orders Tab -->
                            <page string="Orders" attrs="{'invisible': [('operation', '!=', 'import_orders')]}">
                                <group>
                                    <group string="Order Filters">
                                        <field name="order_status"/>
                                        <field name="fulfillment_status"/>
                                    </group>
                                    <group string="Date Range">
                                        <field name="from_date"/>
                                        <field name="to_date"/>
                                    </group>
                                </group>
                                <group colspan="2">
                                    <div class="alert alert-info" role="alert">
                                        <p><strong>Import Orders:</strong> Downloads orders from Shopify and creates sale orders in Odoo.</p>
                                        <p>Use filters to import specific orders. Leave empty to import all recent orders.</p>
                                    </div>
                                </group>
                            </page>

                            <!-- Customers Tab -->
                            <page string="Customers" attrs="{'invisible': [('operation', '!=', 'import_customers')]}">
                                <group>
                                    <group string="Date Range">
                                        <field name="from_date"/>
                                        <field name="to_date"/>
                                    </group>
                                </group>
                                <group colspan="2">
                                    <div class="alert alert-info" role="alert">
                                        <p><strong>Import Customers:</strong> Downloads customers from Shopify and creates/updates contacts in Odoo.</p>
                                        <p>Customer addresses and contact information will be synchronized.</p>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_execute" string="Execute" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_shopify_import_export_wizard" model="ir.actions.act_window">
            <field name="name">Import/Export</field>
            <field name="res_model">shopify.import.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>